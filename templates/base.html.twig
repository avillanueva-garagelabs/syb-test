<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Diario Online
			{% endblock %}
		</title>

		<!-- Enlace a Bootstrap CSS (opcional) -->
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

		<!-- Enlace a tu archivo CSS personalizado -->
		<link
		rel="stylesheet" href="{{ asset('styles/app.css') }}">

		<!-- Bloque para estilos adicionales -->
		{% block stylesheets %}{% endblock %}
	</head>
	<body>
		<!-- Barra de navegación -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('home') }}">Diario Online</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('home') }}">Inicio</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('news_index') }}">Noticias</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('category_index') }}">Categorías</a>
						</li>
					</ul>
					<ul class="navbar-nav ms-auto">
						{% if app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('admin_dashboard') }}">Panel de Administración</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">Cerrar Sesión</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Iniciar Sesión</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		<!-- Contenido principal -->
		<main class="container my-5"> {% block body %}{% endblock %}
			</main>

			<!-- Pie de página -->
			<footer class="bg-dark text-white text-center py-3">
				<p>&copy;
					{{ "now"|date("Y") }}
					Diario Online. Todos los derechos reservados.</p>
			</footer>

			<!-- Scripts de Bootstrap y jQuery (opcional) -->
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

			<!-- Bloque para scripts adicionales -->
			{% block javascripts %}{% endblock %}
		</body>
	</html>
